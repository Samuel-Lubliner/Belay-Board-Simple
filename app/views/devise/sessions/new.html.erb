<div class="container my-5">
  <h1 class="text-center">Belay Board</h1> 
  <h4 class="text-center">Connecting Climbers, Coordinating Climbs</h4>

  <div class="row">
    <div class="col-md-6">
      <div class="card p-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-group' }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control', autocomplete: "email" } %>
            <%= f.input :password, required: false, input_html: { class: 'form-control', autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-check' } if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
               <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-secondary btn-block' %>
          <% end %>
          </div>

          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: 'btn btn-outline-secondary mt-2 btn-block' %>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="col-md-6">
    <h2>Features</h2>
    <ul>
      <li>Post and view climbing sessions on the Belay Board Calendar.</li>
      <li>Create private or public profiles and share your climbing bio.</li>
      <li>Select your preferences: Skill Level, Climbing Type, Angle, and Style.</li>
      <li>Explore climber profiles and connect with the community.</li>
      <li> Dashboard with insightful climbing statistics.</li>
    </ul>

    <div class="row text-center">
      <div class="col-md-6 mb-4">
        <div class="card statistic-card">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-mountain"></i> Total Climbs</h5>
            <p class="card-text statistic-number"><%= @total_availabilities %></p>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="card statistic-card">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-users"></i> Total Climbers</h5>
            <p class="card-text statistic-number"><%= @total_climbers %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
